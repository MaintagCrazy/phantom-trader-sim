{
  "expo": {
    "name": "Phantom Wallet",
    "slug": "phantom-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "phantomwallet",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.phantomwallet.app",
      "backgroundColor": "#1A1A1A"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1A1A"
      },
      "package": "com.phantomwallet.app"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./public/icon-192.png",
      "name": "Phantom Wallet",
      "shortName": "Phantom",
      "description": "Crypto wallet simulator",
      "themeColor": "#1A1A1A",
      "backgroundColor": "#1A1A1A",
      "viewport": "width=device-width, initial-scale=1, viewport-fit=cover"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
